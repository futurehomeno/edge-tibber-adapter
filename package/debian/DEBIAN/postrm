#!/bin/sh
set -e

if [ -d /run/systemd/system ]; then
  systemctl --system daemon-reload >/dev/null || true
fi

if [ "$1" = "remove" ]; then
  if [ -x "/usr/bin/deb-systemd-helper" ]; then
    deb-systemd-helper mask fh-tibber.service >/dev/null
  fi
fi

if [ "$1" = "purge" ]; then
  rm -rf /var/lib/futurehome/fh-tibber/data
  
  if [ -x "/usr/bin/deb-systemd-helper" ]; then
    deb-systemd-helper purge fh-tibber.service >/dev/null
    deb-systemd-helper unmask fh-tibber.service >/dev/null
  fi
fi
